@model EmployeeViewModel
@{
    ViewData["Title"] = "თანამშრომლის რედაქტირება";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-warning text-dark">
                <h2 class="mb-0">
                    <i class="bi bi-pencil"></i> თანამშრომლის რედაქტირება
                </h2>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <h5 class="border-bottom pb-2 mb-3">
                        <i class="bi bi-person-badge"></i> პირადი ინფორმაცია
                    </h5>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PersonalNumber" class="form-label fw-bold required-label"></label>
                            <input asp-for="PersonalNumber" class="form-control" maxlength="11" />
                            <span asp-validation-for="PersonalNumber" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label fw-bold"></label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label fw-bold required-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label fw-bold required-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Gender" class="form-label fw-bold required-label"></label>
                            <select asp-for="Gender" class="form-select">
                                <option value="1">მამრობითი</option>
                                <option value="2">მდედრობითი</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="DateOfBirth" class="form-label fw-bold required-label"></label>
                            <input asp-for="DateOfBirth" type="date" class="form-control" />
                            <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="PositionId" class="form-label fw-bold required-label"></label>
                            <select asp-for="PositionId" class="form-select">
                                @foreach (var position in (List<PositionViewModel>)ViewBag.Positions)
                                {
                                    <option value="@position.Id">@position.Name (დონე: @position.Level)</option>
                                }
                            </select>
                            <span asp-validation-for="PositionId" class="text-danger small"></span>
                        </div>
                    </div>

                    <h5 class="border-bottom pb-2 mb-3 mt-4">
                        <i class="bi bi-briefcase"></i> სამუშაო ინფორმაცია
                    </h5>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Status" class="form-label fw-bold required-label"></label>
                            <select asp-for="Status" class="form-select" id="statusSelect">
                                <option value="0">არააქტიური</option>
                                <option value="1">შტატში</option>
                                <option value="2">შტატგარეშე</option>
                                <option value="3">გათავისუფლებული</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3" id="releaseDateGroup">
                            <label asp-for="ReleaseDate" class="form-label fw-bold"></label>
                            <input asp-for="ReleaseDate" type="date" class="form-control" id="releaseDateInput" />
                            <span asp-validation-for="ReleaseDate" class="text-danger small"></span>
                        </div>
                    </div>

                    @if (!Model.IsActive)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            თანამშრომელი ჯერ არ არის გააქტიურებული
                            @if (Model.CreatedAt != default)
                            {
                                <span>(დამატების თარიღი: @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm"))</span>
                            }
                        </div>
                    }

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="bi bi-arrow-left"></i> უკან
                        </a>
                        <button type="submit" class="btn btn-warning btn-lg">
                            <i class="bi bi-check-circle"></i> განახლება
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}