@model LoginViewModel
@{
    ViewData["Title"] = "შესვლა";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0 text-center">
                    <i class="bi bi-box-arrow-in-right"></i> სისტემაში შესვლა
                </h2>
            </div>
            <div class="card-body p-4">
                <form asp-action="Login" method="post">
                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-person"></i>
                            </span>
                            <input asp-for="Username" class="form-control"
                                   placeholder="ელ.ფოსტა ან პირადი ნომერი" autofocus />
                        </div>
                        <span asp-validation-for="Username" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-lock"></i>
                            </span>
                            <input asp-for="Password" type="password" class="form-control"
                                   placeholder="პაროლი" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>

                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right"></i> შესვლა
                        </button>
                    </div>

                    <hr />

                    <div class="text-center">
                        <p class="mb-0">
                            არ გაქვთ ანგარიში?
                            <a asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]" class="fw-bold">
                                რეგისტრაცია
                            </a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}