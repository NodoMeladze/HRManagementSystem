@model ErrorViewModel
@{
    ViewData["Title"] = Model.ErrorTitle;
    Layout = null;
}

<!DOCTYPE html>
<html lang="ka">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - HR Management System</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    </head>
    <body>
        <div class="error-page-body">
            <div class="error-container">
                <div class="card border-danger error-page">
                    <h2 class="mb-0">
                        <i class="bi @Model.ErrorIcon"></i> @Model.ErrorTitle
                    </h2>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="bi @Model.ErrorIcon error-icon text-danger"></i>
                    </div>

                    <div class="alert alert-warning mb-4">
                        <h4 class="alert-heading">
                            <i class="bi bi-info-circle"></i> @Model.ErrorMessage
                        </h4>
                    </div>

                    @if (Model.StatusCode == 404)
                    {
                        <div class="mb-4">
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <i class="bi bi-people text-primary"></i>
                                    <a href="/Employee/Index">თანამშრომლების სია</a>
                                </li>
                                <li class="list-group-item">
                                    <i class="bi bi-diagram-3 text-primary"></i>
                                    <a href="/Position/Index">თანამდებობები</a>
                                </li>
                                <li class="list-group-item">
                                    <i class="bi bi-house text-primary"></i>
                                    <a href="/">მთავარი გვერდი</a>
                                </li>
                            </ul>
                        </div>
                    }
                    else if (Model.StatusCode == 401)
                    {
                        <div class="alert alert-info mb-4">
                            <i class="bi bi-info-circle"></i>
                            გთხოვთ <a href="/Account/Login" class="alert-link fw-bold">შეხვიდეთ სისტემაში</a> ამ გვერდის სანახავად
                        </div>
                    }
                    else if (Model.StatusCode == 500)
                    {
                        <div class="mb-4">
                            <ul class="list-group">
                                <li class="list-group-item">
                                    <i class="bi bi-1-circle-fill text-primary"></i>
                                    დარწმუნდით, რომ API სერვისი გაშვებულია (https://localhost:7001)
                                </li>
                                <li class="list-group-item">
                                    <i class="bi bi-2-circle-fill text-primary"></i>
                                    შეამოწმეთ ინტერნეტთან კავშირი
                                </li>
                                <li class="list-group-item">
                                    <i class="bi bi-3-circle-fill text-primary"></i>
                                    სცადეთ გვერდის განახლება (F5)
                                </li>
                                <li class="list-group-item">
                                    <i class="bi bi-4-circle-fill text-primary"></i>
                                    თუ პრობლემა გრძელდება, დაუკავშირდით ადმინისტრატორს
                                </li>
                            </ul>
                        </div>
                    }

                    @if (Model.ShowRequestId)
                    {
                        <div class="alert alert-secondary mt-3">
                            <small>
                                <strong>Request ID:</strong> <code>@Model.RequestId</code>
                            </small>
                        </div>
                    }

                    <div class="d-grid gap-2 mt-4">
                        <a href="javascript:history.back()" class="btn btn-secondary btn-lg">
                            <i class="bi bi-arrow-left"></i> უკან დაბრუნება
                        </a>
                        <a href="/" class="btn btn-primary btn-lg">
                            <i class="bi bi-house"></i> მთავარ გვერდზე გადასვლა
                        </a>
                    </div>
                </div>
                <div class="card-footer text-muted text-center">
                    <small>HR Management System</small>
                </div>
            </div>
        </div>
    </body>
</html>