@{
    ViewData["Title"] = "მთავარი";
}

<div class="text-center py-5">
    <div class="mb-4">
        <i class="bi bi-people-fill" style="font-size: 5rem; color: #0d6efd;"></i>
    </div>
    <h1 class="display-4 fw-bold">HR Management System</h1>
    <p class="lead text-muted">თანამშრომლების მართვის სისტემა</p>

    <div class="row mt-5">
        <div class="col-md-6 mb-3">
            <div class="card shadow h-100">
                <div class="card-body text-center">
                    <i class="bi bi-people display-4 text-primary"></i>
                    <h3 class="mt-3">თანამშრომლები</h3>
                    <p class="text-muted">თანამშრომლების დამატება, რედაქტირება და მართვა</p>
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-arrow-right"></i> გადასვლა
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card shadow h-100">
                <div class="card-body text-center">
                    <i class="bi bi-diagram-3 display-4 text-success"></i>
                    <h3 class="mt-3">თანამდებობები</h3>
                    <p class="text-muted">თანამდებობების იერარქიის მართვა</p>
                    <a asp-controller="Position" asp-action="Index" class="btn btn-success">
                        <i class="bi bi-arrow-right"></i> გადასვლა
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>