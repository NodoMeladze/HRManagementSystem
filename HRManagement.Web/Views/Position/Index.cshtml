@model List<PositionViewModel>
@{
    ViewData["Title"] = "თანამდებობები";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-diagram-3"></i> თანამდებობების იერარქია</h1>
    <a asp-action="Create" class="btn btn-primary btn-lg">
        <i class="bi bi-plus-circle"></i> თანამდებობის დამატება
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="card shadow">
        <div class="card-body p-4">
            @foreach (var position in Model)
            {
                @await Html.PartialAsync("_PositionTreePartial", position)
            }
        </div>
        <div class="card-footer bg-light">
            <div class="text-muted">
                <i class="bi bi-info-circle"></i>
                <span class="badge bg-info text-dark ms-2">
                    <i class="bi bi-people"></i> თანამშრომლების რაოდენობა
                </span>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i>
        თანამდებობები ვერ მოიძებნა. დაამატეთ პირველი თანამდებობა!
    </div>
}