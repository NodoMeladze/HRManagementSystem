@model HRManagement.WebApp.Models.ViewModels.Position.PositionListViewModel
@{
    ViewData["Title"] = "თანამდებობები";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-diagram-3-fill text-primary"></i> თანამდებობების სტრუქტურა
        </h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> თანამდებობის დამატება
        </a>
    </div>

    @if (Model.Positions.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <div class="position-tree">
                    @foreach (var position in Model.Positions)
                    {
                        @await Html.PartialAsync("_PositionTreeNode", position)
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i>
            <span>თანამდებობები არ არის დამატებული</span>
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle"></i> დადასტურება
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">ნამდვილად გსურთ თანამდებობის <strong id="positionName"></strong> წაშლა?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> არა
                </button>
                <form id="deleteForm" asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" name="id" id="positionIdInput" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> დიახ, წაშლა
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .position-tree {
        line-height: 2;
    }

    .position-node {
        margin-bottom: 0.5rem;
        padding: 0.75rem;
        background-color: #f8f9fa;
        border-left: 3px solid #0d6efd;
        border-radius: 0.375rem;
        transition: all 0.2s;
    }

        .position-node:hover {
            background-color: #e9ecef;
            border-left-width: 4px;
        }

    .position-children {
        margin-left: 2rem;
        margin-top: 0.5rem;
        padding-left: 1rem;
        border-left: 2px dashed #dee2e6;
    }

    .position-level-0 {
        background-color: #e7f3ff;
        border-left-color: #0d6efd;
        font-weight: 600;
    }

    .position-level-1 {
        background-color: #f0f8ff;
        border-left-color: #0dcaf0;
    }

    .position-level-2 {
        background-color: #f8f9fa;
        border-left-color: #6c757d;
    }

    .position-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .position-name {
        font-size: 1.1rem;
        color: #212529;
        margin: 0;
    }

    .position-actions {
        display: flex;
        gap: 0.5rem;
    }
</style>

@section Scripts {
    <script>
        // Delete modal handling
        const deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const positionId = button.getAttribute('data-position-id');
            const positionName = button.getAttribute('data-position-name');

            document.getElementById('positionIdInput').value = positionId;
            document.getElementById('positionName').textContent = positionName;
        });
    </script>
}