@model HRManagement.WebApp.Models.ApiModels.Position.PositionDto

<div class="position-node position-level-@Model.Level">
    <div class="position-info">
        <div class="d-flex align-items-center gap-3">
            <h5 class="position-name mb-0">
                @if (Model.Level == 0)
                {
                    <i class="bi bi-building text-primary"></i>
                }
                else if (Model.Level == 1)
                {
                    <i class="bi bi-people text-info"></i>
                }
                else
                {
                    <i class="bi bi-person text-secondary"></i>
                }
                @Model.Name
            </h5>
            <div>
                <span class="badge bg-secondary">დონე: @Model.Level</span>
                @if (Model.EmployeeCount > 0)
                {
                    <span class="badge bg-info">
                        <i class="bi bi-people-fill"></i> @Model.EmployeeCount
                    </span>
                }
            </div>
        </div>
        <div class="position-actions">
            <a asp-action="Create"
               asp-route-parentId="@Model.Id"
               class="btn btn-sm btn-outline-primary"
               title="ქვეთანამდებობის დამატება">
                <i class="bi bi-plus-circle"></i> ქვედანაყოფი
            </a>
            <button type="button"
                    class="btn btn-sm btn-outline-danger"
                    data-bs-toggle="modal"
                    data-bs-target="#deleteModal"
                    data-position-id="@Model.Id"
                    data-position-name="@Model.Name"
                    title="წაშლა">
                <i class="bi bi-trash"></i>
            </button>
        </div>
    </div>
</div>

@if (Model.Children.Any())
{
    <div class="position-children">
        @foreach (var child in Model.Children)
        {
            @await Html.PartialAsync("_PositionTreeNode", child)
        }
    </div>
}