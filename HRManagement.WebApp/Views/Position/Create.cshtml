@model HRManagement.WebApp.Models.ViewModels.Position.CreatePositionViewModel
@{
    ViewData["Title"] = "თანამდებობის დამატება";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle"></i> თანამდებობის დამატება
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" id="createPositionForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name"
                                   class="form-control"
                                   placeholder="მაგ: დირექტორი, მენეჯერი, პროგრამისტი"
                                   autofocus />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ParentId" class="form-label"></label>
                            <select asp-for="ParentId"
                                    asp-items="Model.Positions"
                                    class="form-select">
                            </select>
                            <span asp-validation-for="ParentId" class="text-danger"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle"></i>
                                თუ არ აირჩევთ მშობელ თანამდებობას, ეს იქნება ძირითადი დონის თანამდებობა
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-lightbulb"></i>
                            <strong>მაგალითი:</strong> დირექტორი → IT დეპარტამენტის უფროსი → უფროსი პროგრამისტი
                        </div>

                        <div class="d-flex gap-2 justify-content-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> გაუქმება
                            </a>
                            <button type="submit" class="btn btn-primary" id="submitBtn">
                                <i class="bi bi-check-circle"></i> დამატება
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Form submission with loading state
        submitFormWithLoading('createPositionForm', 'submitBtn');
    </script>
}