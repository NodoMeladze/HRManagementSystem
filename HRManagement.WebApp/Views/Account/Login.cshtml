@model HRManagement.WebApp.Models.ViewModels.Auth.LoginViewModel
@{
    ViewData["Title"] = "შესვლა";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow">
            <div class="card-body p-4">
                <h2 class="card-title text-center mb-4">შესვლა სისტემაში</h2>

                <form asp-action="Login" method="post">
                    <input type="hidden" asp-for="ReturnUrl" />

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control" placeholder="ელ.ფოსტა ან პირადი ნომერი" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" placeholder="შეიყვანეთ პაროლი" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">შესვლა</button>
                    </div>
                </form>

                <hr class="my-4">

                <div class="text-center">
                    <p class="mb-0">არ გაქვთ ანგარიში?</p>
                    <a asp-action="Register" class="btn btn-link">რეგისტრაცია</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}