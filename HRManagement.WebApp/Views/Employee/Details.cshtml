@model HRManagement.WebApp.Models.ViewModels.Employee.EmployeeDetailsViewModel
@{
    ViewData["Title"] = "თანამშრომლის დეტალები";
    var employee = Model.Employee;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="bi bi-person-circle"></i> თანამშრომლის დეტალები
                    </h4>
                    <div>
                        @if (employee.IsActive)
                        {
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle"></i> აქტიური
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-warning">
                                <i class="bi bi-clock"></i> მოლოდინის რეჟიმში
                            </span>
                        }
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5 class="text-primary">@employee.FullName</h5>
                            <p class="text-muted mb-0">@employee.PositionName</p>
                        </div>
                        <div class="col-md-6 text-md-end">
                            @{
                                var statusBadgeClass = employee.Status switch
                                {
                                    0 => "bg-secondary",
                                    1 => "bg-success",
                                    2 => "bg-warning",
                                    3 => "bg-danger",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @statusBadgeClass fs-6">@employee.StatusDisplay</span>
                        </div>
                    </div>

                    <hr />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="text-muted small">პირადი ნომერი</label>
                                <p class="mb-0"><strong>@employee.PersonalNumber</strong></p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="text-muted small">სქესი</label>
                                <p class="mb-0"><strong>@employee.GenderDisplay</strong></p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="text-muted small">დაბადების თარიღი</label>
                                <p class="mb-0"><strong>@employee.DateOfBirth</strong></p>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(employee.Email))
                        {
                            <div class="col-md-6">
                                <div class="detail-item">
                                    <label class="text-muted small">ელ.ფოსტა</label>
                                    <p class="mb-0">
                                        <a href="mailto:@employee.Email">@employee.Email</a>
                                    </p>
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(employee.ReleaseDate))
                        {
                            <div class="col-md-6">
                                <div class="detail-item">
                                    <label class="text-muted small">გათავისუფლების თარიღი</label>
                                    <p class="mb-0"><strong>@employee.ReleaseDate</strong></p>
                                </div>
                            </div>
                        }

                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="text-muted small">შექმნის თარიღი</label>
                                <p class="mb-0"><strong>@employee.CreatedAt.ToString("yyyy-MM-dd HH:mm")</strong></p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="text-muted small">ბოლო განახლება</label>
                                <p class="mb-0"><strong>@employee.UpdatedAt.ToString("yyyy-MM-dd HH:mm")</strong></p>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> უკან
                        </a>
                        <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> რედაქტირება
                        </a>
                        <button type="button"
                                class="btn btn-danger"
                                data-bs-toggle="modal"
                                data-bs-target="#deleteModal">
                            <i class="bi bi-trash"></i> წაშლა
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle"></i> დადასტურება
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">ნამდვილად გსურთ თანამშრომლის <strong>@employee.FullName</strong> წაშლა?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> არა
                </button>
                <form asp-action="Delete" asp-route-id="@employee.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> დიახ, წაშლა
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .detail-item {
        padding: 0.75rem;
        background-color: #f8f9fa;
        border-radius: 0.375rem;
    }

        .detail-item label {
            display: block;
            margin-bottom: 0.25rem;
            font-weight: 600;
        }
</style>