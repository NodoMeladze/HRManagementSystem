@model HRManagement.WebApp.Models.ViewModels.Employee.UpdateEmployeeViewModel
@{
    ViewData["Title"] = "თანამშრომლის რედაქტირება";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil"></i> თანამშრომლის რედაქტირება
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" id="editEmployeeForm">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PersonalNumber" class="form-label"></label>
                                <input asp-for="PersonalNumber"
                                       class="form-control"
                                       placeholder="01234567890"
                                       maxlength="11" />
                                <span asp-validation-for="PersonalNumber" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email"
                                       class="form-control"
                                       placeholder="example@email.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label"></label>
                                <input asp-for="FirstName"
                                       class="form-control"
                                       placeholder="სახელი" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label"></label>
                                <input asp-for="LastName"
                                       class="form-control"
                                       placeholder="გვარი" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Gender" class="form-label"></label>
                                <select asp-for="Gender"
                                        asp-items="Model.Genders"
                                        class="form-select">
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="DateOfBirth" class="form-label"></label>
                                <input asp-for="DateOfBirth"
                                       type="date"
                                       class="form-control" />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PositionId" class="form-label"></label>
                                <select asp-for="PositionId"
                                        asp-items="Model.Positions"
                                        class="form-select">
                                </select>
                                <span asp-validation-for="PositionId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Status" class="form-label"></label>
                                <select asp-for="Status"
                                        asp-items="Model.Statuses"
                                        class="form-select"
                                        id="statusSelect">
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row" id="releaseDateRow">
                            <div class="col-md-12 mb-3">
                                <label asp-for="ReleaseDate" class="form-label"></label>
                                <input asp-for="ReleaseDate"
                                       type="date"
                                       class="form-control"
                                       id="releaseDateInput" />
                                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex gap-2 justify-content-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> გაუქმება
                            </a>
                            <button type="submit" class="btn btn-primary" id="submitBtn">
                                <i class="bi bi-check-circle"></i> განახლება
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Show/hide ReleaseDate based on Status
        const statusSelect = document.getElementById('statusSelect');
        const releaseDateRow = document.getElementById('releaseDateRow');
        const releaseDateInput = document.getElementById('releaseDateInput');

        function toggleReleaseDate() {
            if (statusSelect.value === '3') { // Released status
                releaseDateRow.style.display = 'block';
                releaseDateInput.required = true;
            } else {
                releaseDateRow.style.display = 'none';
                releaseDateInput.required = false;
            }
        }

        statusSelect.addEventListener('change', toggleReleaseDate);

        // Check on page load
        toggleReleaseDate();

        // Form submission with loading state
        submitFormWithLoading('editEmployeeForm', 'submitBtn');
    </script>
}