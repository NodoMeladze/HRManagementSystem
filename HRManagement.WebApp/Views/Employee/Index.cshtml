@model HRManagement.WebApp.Models.ViewModels.Employee.EmployeeListViewModel
@{
    ViewData["Title"] = "თანამშრომლები";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-people-fill text-primary"></i> თანამშრომლები
            <span class="badge bg-secondary">@Model.TotalCount</span>
        </h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> თანამშრომლის დამატება
        </a>
    </div>

    <!-- Search Form -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text"
                               name="searchTerm"
                               class="form-control"
                               placeholder="ძიება სახელით ან გვარით..."
                               value="@Model.SearchTerm" />
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> ძიება
                    </button>
                </div>
            </form>
            @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
            {
                <div class="mt-2">
                    <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> ძიების გასუფთავება
                    </a>
                </div>
            }
        </div>
    </div>

    @if (Model.Employees.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>პირადი ნომერი</th>
                                <th>სახელი და გვარი</th>
                                <th>სქესი</th>
                                <th>თანამდებობა</th>
                                <th>სტატუსი</th>
                                <th>აქტიურობა</th>
                                <th class="text-center">მოქმედებები</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var employee in Model.Employees)
                            {
                                <tr>
                                    <td>@employee.PersonalNumber</td>
                                    <td>
                                        <strong>@employee.FullName</strong>
                                        @if (!string.IsNullOrEmpty(employee.Email))
                                        {
                                            <br />
                                            <small class="text-muted">
                                                <i class="bi bi-envelope"></i> @employee.Email
                                            </small>
                                        }
                                    </td>
                                    <td>@employee.GenderDisplay</td>
                                    <td>
                                        <span class="badge bg-info">@employee.PositionName</span>
                                    </td>
                                    <td>
                                        @{
                                            var statusBadgeClass = employee.Status switch
                                            {
                                                0 => "bg-secondary",
                                                1 => "bg-success",
                                                2 => "bg-warning",
                                                3 => "bg-danger",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @statusBadgeClass">@employee.StatusDisplay</span>
                                    </td>
                                    <td>
                                        @if (employee.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> აქტიური
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">
                                                <i class="bi bi-clock"></i> მოლოდინის რეჟიმში
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details"
                                               asp-route-id="@employee.Id"
                                               class="btn btn-sm btn-outline-info"
                                               title="დეტალები">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit"
                                               asp-route-id="@employee.Id"
                                               class="btn btn-sm btn-outline-primary"
                                               title="რედაქტირება">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button"
                                                    class="btn btn-sm btn-outline-danger"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#deleteModal"
                                                    data-employee-id="@employee.Id"
                                                    data-employee-name="@employee.FullName"
                                                    title="წაშლა">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i>
            @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
            {
                <span>ძიების შედეგად თანამშრომლები ვერ მოიძებნა</span>
            }
            else
            {
                <span>თანამშრომლები არ არის დამატებული</span>
            }
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle"></i> დადასტურება
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">ნამდვილად გსურთ თანამშრომლის <strong id="employeeName"></strong> წაშლა?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> არა
                </button>
                <form id="deleteForm" asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" name="id" id="employeeIdInput" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> დიახ, წაშლა
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Delete modal handling
        const deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const employeeId = button.getAttribute('data-employee-id');
            const employeeName = button.getAttribute('data-employee-name');

            document.getElementById('employeeIdInput').value = employeeId;
            document.getElementById('employeeName').textContent = employeeName;
        });
    </script>
}