@{
    ViewData["Title"] = "მთავარი გვერდი";
}

<div class="container">
    <div class="row min-vh-100 align-items-center">
        <div class="col-lg-6 mx-auto text-center">
            <i class="bi bi-building text-primary" style="font-size: 5rem;"></i>
            <h1 class="display-4 mt-4">HR მართვის სისტემა</h1>
            <p class="lead mt-3">
                თანამშრომლებისა და თანამდებობების მართვის სისტემა
            </p>

            @if (ViewBag.IsAuthenticated == true)
            {
                <div class="mt-4">
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-primary btn-lg">
                        <i class="bi bi-people"></i> თანამშრომლების სია
                    </a>
                </div>
            }
            else
            {
                <div class="mt-4">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg me-2">
                        <i class="bi bi-box-arrow-in-right"></i> შესვლა
                    </a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-lg">
                        <i class="bi bi-person-plus"></i> რეგისტრაცია
                    </a>
                </div>
            }

            <div class="mt-5">
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <i class="bi bi-people-fill text-primary" style="font-size: 2rem;"></i>
                                <h5 class="card-title mt-3">თანამშრომლები</h5>
                                <p class="card-text text-muted">
                                    თანამშრომლების დამატება, რედაქტირება და მართვა
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <i class="bi bi-diagram-3-fill text-primary" style="font-size: 2rem;"></i>
                                <h5 class="card-title mt-3">თანამდებობები</h5>
                                <p class="card-text text-muted">
                                    იერარქიული სტრუქტურის მართვა
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <i class="bi bi-search text-primary" style="font-size: 2rem;"></i>
                                <h5 class="card-title mt-3">ძიება</h5>
                                <p class="card-text text-muted">
                                    სწრაფი ძიება სახელით და გვარით
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>